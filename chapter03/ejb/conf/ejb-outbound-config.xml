<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:ejb="http://www.mulesource.org/schema/mule/ejb/2.0"
       xmlns:stdio="http://www.mulesource.org/schema/mule/stdio/2.0"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
               http://www.mulesource.org/schema/mule/stdio/2.0 http://www.mulesource.org/schema/mule/stdio/2.0/mule-stdio.xsd
               http://www.mulesource.org/schema/mule/ejb/2.0 http://www.mulesource.org/schema/mule/ejb/2.0/mule-ejb.xsd">

       <ejb:connector name="ejbConnector" securityPolicy="security.policy"/>
        
        <global-property name="ejb.host" value="localhost"/>
        <global-property name="ejb.port" value="3820"/>

        <model name="ejbOutboundModel" >
            
            <service name="ejbOutboundService">
                <inbound>
                    <stdio:inbound-endpoint system="IN"/>
                </inbound>
                <outbound>
                    <chaining-router>
                        <ejb:outbound-endpoint host="${ejb.host}" port="${ejb.port}" object="com.company.RemoteGreetingService" method="getGreeting" />
                        <stdio:outbound-endpoint system="OUT"/>
                    </chaining-router>
                </outbound>
            </service>
            
        </model>
    </mule>
