        <inbound>
            <jms:inbound-endpoint queue="errors"/>
        </inbound>
        <outbound>
          <pass-through-router> 
              <stdio:outbound-endpoint system="OUT"/>
          </pass-through-router> 
       </outbound>
    </service>
    -->
</model>

</mule>
