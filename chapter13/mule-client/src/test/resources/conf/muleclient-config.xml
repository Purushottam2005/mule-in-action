<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
	xmlns:spring="http://www.springframework.org/schema/beans" xmlns:file="http://www.mulesource.org/schema/mule/file/2.0"
	xmlns:client="http://www.mulesource.org/schema/mule/client/2.0"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/file/2.0 http://www.mulesource.org/schema/mule/file/2.0/mule-file.xsd
       http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd
       http://www.mulesource.org/schema/mule/client/2.0 http://www.mulesource.org/schema/mule/client/2.0/mule-client.xsd">

	<file:connector name="NonDeletingFileConnector"
		autoDelete="false" />

	<model name="LogicComponentsShowcase">

		<service name="Md5FileHasher">
			<inbound>
				<vm:inbound-endpoint path="Md5FileHasher.In" />
			</inbound>
			<pooled-component>
				<singleton-object class="com.clood.component.MuleClientMd5FileHasher">
					<property key="fileConnector" value-ref="NonDeletingFileConnector" />
					<property key="sourceFolder" value="${java.io.tmpdir}" />
				</singleton-object>
				<pooling-profile initialisationPolicy="INITIALISE_ONE"
					maxActive="5" />
			</pooled-component>
		</service>

	</model>
</mule>
